			<groupId>com.lowagie</groupId>
			<artifactId>itext</artifactId>
			<version>2.1.7</version>
		</dependency>
		
		 <dependency>
      		<groupId>uk.ac.ox.oucs.oauth</groupId>
      		<artifactId>oauth-api</artifactId>
      		<version>1.1-SNAPSHOT</version>
     		 <scope>provided</scope>
    	</dependency>

	</dependencies>
	<profiles>
		<profile>
			<id>standalone</id>
			<!-- Profile which should pull everything into the war so it can be run
										without Sakai. -->
			<dependencies>
				<dependency>
					<groupId>uk.ac.ox.oucs</groupId>
					<artifactId>course-signup-hbm</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>uk.ac.ox.oucs</groupId>
					<artifactId>course-signup-impl</artifactId>
					<scope>compile</scope>
				</dependency>
				<!-- Sakai services -->
				<dependency>
					<groupId>org.sakaiproject.kernel</groupId>
					<artifactId>sakai-kernel-api</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>org.sakaiproject.kernel</groupId>
					<artifactId>sakai-component-manager</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>org.sakaiproject.kernel</groupId>
					<artifactId>sakai-kernel-util</artifactId>
				</dependency>
				<dependency>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
					<version>1.0.4</version>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate</artifactId>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>org.springframework</groupId>
					<artifactId>spring</artifactId>
					<scope>compile</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<!-- This fires off the YUI compressor. -->
				<groupId>com.samaxes.maven</groupId>
				<artifactId>maven-minify-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<!-- The exhibit source code has a small change to allow a conversion
																			function when reading JSON. -->
						<id>exhibit-re-compress</id>
						<phase>process-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<jsSourceDir>static/lib/exhibit</jsSourceDir>
							<!-- To regenerate the list use find scripts -name \*.js \! -name
																						create.js | tr '\n' '</jsSourceFile> <jsSourceFile>' -->
							<jsSourceFiles>
								<jsSourceFile>scripts/data/collection.js</jsSourceFile>
								<jsSourceFile>scripts/data/controls.js</jsSourceFile>
								<jsSourceFile>scripts/data/database.js</jsSourceFile>
								<jsSourceFile>scripts/data/exporters/bibtex-exporter.js</jsSourceFile>
								<jsSourceFile>scripts/data/exporters/exhibit-json-exporter.js</jsSourceFile>
								<jsSourceFile>scripts/data/exporters/rdf-xml-exporter.js</jsSourceFile>
								<jsSourceFile>scripts/data/exporters/semantic-wikitext-exporter.js</jsSourceFile>
								<jsSourceFile>scripts/data/exporters/tsv-exporter.js</jsSourceFile>
								<jsSourceFile>scripts/data/expression-parser.js</jsSourceFile>
								<jsSourceFile>scripts/data/expression.js</jsSourceFile>
								<jsSourceFile>scripts/data/functions.js</jsSourceFile>
								<jsSourceFile>scripts/data/importers/babel-based-importer.js</jsSourceFile>
								<jsSourceFile>scripts/data/importers/exhibit-json-importer.js</jsSourceFile>
								<jsSourceFile>scripts/data/importers/html-table-importer.js</jsSourceFile>
								<jsSourceFile>scripts/data/importers/jsonp-importer.js</jsSourceFile>
								<jsSourceFile>scripts/data/importers/rdfa-importer.js</jsSourceFile>
								<jsSourceFile>scripts/exhibit.js</jsSourceFile>
								<jsSourceFile>scripts/persistence.js</jsSourceFile>
								<jsSourceFile>scripts/ui/coders/color-coder.js</jsSourceFile>
								<jsSourceFile>scripts/ui/coders/color-gradient-coder.js</jsSourceFile>
								<jsSourceFile>scripts/ui/coders/default-color-coder.js</jsSourceFile>
								<jsSourceFile>scripts/ui/coders/icon-coder.js</jsSourceFile>
								<jsSourceFile>scripts/ui/coders/size-coder.js</jsSourceFile>
								<jsSourceFile>scripts/ui/coders/size-gradient-coder.js</jsSourceFile>
								<jsSourceFile>scripts/ui/coordinator.js</jsSourceFile>
								<jsSourceFile>scripts/ui/facets/cloud-facet.js</jsSourceFile>
								<jsSourceFile>scripts/ui/facets/hierarchical-facet.js</jsSourceFile>
								<jsSourceFile>scripts/ui/facets/list-facet.js</jsSourceFile>
								<jsSourceFile>scripts/ui/facets/numeric-range-facet.js</jsSourceFile>
								<jsSourceFile>scripts/ui/facets/slider-facet.js</jsSourceFile>
								<jsSourceFile>scripts/ui/facets/slider.js</jsSourceFile>
								<jsSourceFile>scripts/ui/facets/text-search-facet.js</jsSourceFile>
								<jsSourceFile>scripts/ui/format-parser.js</jsSourceFile>
								<jsSourceFile>scripts/ui/formatter.js</jsSourceFile>
								<jsSourceFile>scripts/ui/lens.js</jsSourceFile>
								<jsSourceFile>scripts/ui/ui-context.js</jsSourceFile>
								<jsSourceFile>scripts/ui/ui.js</jsSourceFile>
								<jsSourceFile>scripts/ui/views/html-view.js</jsSourceFile>
								<jsSourceFile>scripts/ui/views/ordered-view-frame.js</jsSourceFile>
								<jsSourceFile>scripts/ui/views/tabular-view.js</jsSourceFile>
								<jsSourceFile>scripts/ui/views/thumbnail-view.js</jsSourceFile>
								<jsSourceFile>scripts/ui/views/tile-view.js</jsSourceFile>
								<jsSourceFile>scripts/ui/views/view-panel.js</jsSourceFile>
								<jsSourceFile>scripts/ui/widgets/collection-summary-widget.js</jsSourceFile>
								<jsSourceFile>scripts/ui/widgets/legend-gradient-widget.js</jsSourceFile>
								<jsSourceFile>scripts/ui/widgets/legend-widget.js</jsSourceFile>
								<jsSourceFile>scripts/ui/widgets/logo.js</jsSourceFile>
								<jsSourceFile>scripts/ui/widgets/option-widget.js</jsSourceFile>
								<jsSourceFile>scripts/ui/widgets/resizable-div-widget.js</jsSourceFile>
								<jsSourceFile>scripts/ui/widgets/toolbox-widget.js</jsSourceFile>
								<jsSourceFile>scripts/util/coders.js</jsSourceFile>
								<jsSourceFile>scripts/util/facets.js</jsSourceFile>
								<jsSourceFile>scripts/util/set.js</jsSourceFile>
								<jsSourceFile>scripts/util/settings.js</jsSourceFile>
								<jsSourceFile>scripts/util/util.js</jsSourceFile>
								<jsSourceFile>scripts/util/views.js</jsSourceFile>
							</jsSourceFiles>
							<jsFinalFile>exhibit-bundle.js</jsFinalFile>
							<cssSourceDir>static/lib/exhibit</cssSourceDir>
							<cssSourceIncludes>styles/**/*.css</cssSourceIncludes>
							<cssFinalFile>exhibit-bundle.css</cssFinalFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
